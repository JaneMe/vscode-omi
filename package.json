{
	"name": "omi-develop",
	"displayName": "omi-develop",
	"description": "Omi for Visual Studio Code (develop)",
	"license": "Omi",
	"version": "1.0.4",
	"publisher": "ZainChen",
	"author": {
		"name": "ZainChen"
	},
	"icon": "assets/omi-logo2019-128.png",
	"homepage": "https://github.com/ZainChen/vscode-omi/blob/dev/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/ZainChen/vscode-omi"
	},
	"bugs": {
		"url": "https://github.com/ZainChen/vscode-omi/issues"
	},
	"keywords": [
		"zain",
		"ZainChen",
		"omi",
		"志银",
		"tencent",
		"nodejs"
	],
	"categories": [
		"Snippets",
		"Other"
	],
	"engines": {
		"vscode": "^1.31.0"
	},
	"activationEvents": [
		"onCommand:omi.help",
		"onCommand:omi.webview",
		"onCommand:omi.tstojs",
		"onLanguage:json",
		"onLanguage:javascript"
	],
	"main": "./src/index.js",
	"contributes": {
		"commands": [
			{
				"command": "omi.help",
				"title": "omi help",
				"icon": {
					"light": "./assets/omi-set.svg",
					"dark": "./assets/omi-set.svg"
				}
			},
			{
				"command": "omi.webview",
				"title": "omi wv",
				"icon": {
					"light": "./assets/add1.svg",
					"dark": "./assets/add1.svg"
				}
			}
		],
		"languages": [
			{
				"id": "json",
				"extensions": [
					".json"
				],
				"aliases": [
					"Json"
				]
			},
			{
				"id": "javascript",
				"extensions": [
					".js"
				],
				"aliases": [
					"JavaScript",
					"js",
					"JS",
					"Js"
				]
			}
		],
		"snippets": [
			{
				"path": "./src/snippets/omi.code-snippets"
			},
			{
				"language": "javascript",
				"path": "./src/snippets/omi.json"
			},
			{
				"language": "typescript",
				"path": "./src/snippets/omi.json"
			},
			{
				"language": "json",
				"path": "./src/snippets/omi.json"
			},
			{
				"language": "html",
				"path": "./src/snippets/omi.json"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "omi-views",
					"title": "omi",
					"icon": "./assets/omi-logo2019-30-30.svg"
				}
			]
		},
		"views": {
			"omi-views": [
				{
					"id": "omi-view-ecosystem",
					"name": "ecosystem"
				},
				{
					"id": "omi-view-json",
					"name": "json"
				},
				{
					"id": "omi-view-help",
					"name": "help"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "omi.help",
					"group": "navigation"
				},
				{
					"when": "resourceLangId == markdown",
					"command": "markdown.showPreview",
					"alt": "markdown.showPreviewToSide",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"command": "omi.help",
					"group": "navigation"
				},
				{
					"command": "markdown.showPreview",
					"when": "resourceLangId == markdown",
					"alt": "markdown.showPreviewToSide",
					"group": "navigation"
				}
			],
			"view/title": [
				{
					"command": "omi.help",
					"when": "view == omi-view-ecosystem",
					"group": "navigation"
				},
				{
					"command": "omi.webview",
					"when": "view == omi-view-ecosystem"
				}
			]
		},
		"keybindings": [
			{
				"command": "omi.help",
				"key": "ctrl+f10",
				"mac": "cmd+f10",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Omi",
			"properties": {
				"omi.Author.ZainChen": {
					"type": "string",
					"default": "Welcome to omi.",
					"description": "Omi for Visual Studio Code"
				},
				"omi.json.autorefresh": {
					"type": "boolean",
					"default": false
				},
				"omi.start.welcome": {
					"type": "boolean",
					"default": false,
					"description": "是否在每次启动时显示欢迎提示！"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2"
	}
}
